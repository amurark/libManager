<%= render(:partial => "./shared/topBar") %>
<p id="notice"><%= notice %></p>
<div class = "bookList">
  <h1 style = "color:#2061ab;">Search books via Title</h1>
  <%= form_tag ('/fullsearchtitle'), method: "get" do %>
      <%= text_field_tag :title, params[:title], class: "formInput", placeholder: "Enter title of the book:" %>
      <%= submit_tag "Search", :name => nil, class: "searchButton blueButton" %>
  <% end %>
</div>



