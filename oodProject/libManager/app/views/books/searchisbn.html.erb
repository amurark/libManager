<%= render(:partial => "./shared/topBar") %>
<p id="notice"><%= notice %></p>
<div class = "bookList">
  <h1 style = "color:#3aab90;">Search books via ISBN</h1>
  <%= form_tag ('/fullsearchisbn'), method: "get" do %>
      <%= text_field_tag :isbn, params[:isbn], class: "formInput", placeholder: "Enter ISBN:" %>
      <%= submit_tag "Search", :name => nil, class: "searchButton seaGreenButton" %>
  <% end %>
</div>



